  <!-- Main Content -->
  <main class="min-h-screen bg-gradient-to-b from-zinc-950 to-black py-12 px-6">
    <div class="container mx-auto max-w-6xl">
      
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-black mb-4">
          Choose Your <span class="gradient-text">Barber</span>
        </h1>
        <p class="text-gray-400 text-lg">Select an expert barber to book your appointment</p>
      </div>

      <?php if (count($barbers) > 0): ?>
        <!-- Barber Grid -->
        <div id="barber-grid" class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <?php 
          $colors = [
            ['gradient' => 'from-purple-600 to-pink-600', 'stars' => 5],
            ['gradient' => 'from-blue-600 to-purple-600', 'stars' => 4],
            ['gradient' => 'from-pink-600 to-orange-600', 'stars' => 5],
            ['gradient' => 'from-orange-600 to-red-600', 'stars' => 4]
          ];
          
          foreach ($barbers as $index => $barber): 
            $color = $colors[$index % 4];
            $initials = strtoupper(substr($barber['full_name'], 0, 1) . substr(explode(' ', $barber['full_name'])[1] ?? '', 0, 1));
            $stars = $color['stars'];
          ?>
          
          <div class="fade-in barber-card bg-gradient-to-br from-gray-900 to-gray-800 border-2 border-gray-700 rounded-2xl p-6 flex items-center gap-6" 
               onclick="selectBarber(this, <?= htmlspecialchars(json_encode($barber)) ?>)">
            <div class="relative">
              <div class="w-20 h-20 rounded-full bg-gradient-to-br <?= $color['gradient'] ?> flex items-center justify-center text-3xl font-bold border-4 border-gray-700">
                <?= htmlspecialchars($initials) ?>
              </div>
              <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-500 rounded-full border-2 border-gray-900"></div>
            </div>
            
            <div class="flex-1">
              <h2 class="text-xl font-bold mb-2"><?= htmlspecialchars($barber['full_name']) ?></h2>
              
              <?php if ($barber['specialization']): ?>
              <p class="text-gray-400 text-sm mb-2"><?= htmlspecialchars($barber['specialization']) ?></p>
              <?php endif; ?>
              
              <div class="flex items-center gap-2">
                <div class="flex text-yellow-500">
                  <?php for ($i = 0; $i < 5; $i++): ?>
                    <span><?= $i < $stars ? '★' : '☆' ?></span>
                  <?php endfor; ?>
                </div>
                <span class="text-sm text-gray-400">(<?= $stars ?>.0)</span>
              </div>
              
              <?php if ($barber['experience_years']): ?>
              <p class="text-gray-500 text-xs mt-2"><?= htmlspecialchars($barber['experience_years']) ?> years experience</p>
              <?php endif; ?>
            </div>
            
            <div class="hidden selected-icon">
              <svg class="w-8 h-8 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          
          <?php endforeach; ?>
